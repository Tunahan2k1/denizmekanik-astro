---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    
    <meta name="description" content="Deniz Mekanik: 1952'den beri vinç, makine ve endüstriyel ekipmanlarda uzmanlaşmış lider firma." />
    <link rel="icon" href="/assets/images/logo/logo.png" />

    <!-- CSS Dosyaları -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    
    <!-- === FONT AWESOME === -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <!-- ========================= -->
    
    <link rel="stylesheet" href="/assets/css/style.css" />
    
    <!-- Sayfaya özel head etiketleri için slot -->
    <slot name="head" />
  </head>
  <body>
    <Navbar />

    <main>
      <slot />
    </main>

    <Footer />

    <!-- Gerekli JS Dosyaları -->
    <script is:inline src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script is:inline src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script is:inline src="/assets/js/navbar.js"></script>
  </body>
</html>