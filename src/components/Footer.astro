<!-- === GÜNCELLENMİŞ BİLEŞENE ÖZEL STİLLER === -->
<style>
  /* === MASAÜSTÜ STİLLERİ (768px ve üzeri) === */
  .fixed-contact-buttons {
    position: fixed;
    top: 50%; 
    transform: translateY(-50%);
    left: 0;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .contact-button {
    display: flex;
    align-items: center;
    padding: 12px 18px;
    background-color: #343a40;
    color: white;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
    gap: 10px; 
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
  }

  .fixed-contact-buttons:hover .contact-button {
    transform: translateX(0);
  }

  .contact-button i {
    transform: translateX(calc(100% + 18px));
    font-size: 24px;
    min-width: 24px;
  }

  .fixed-contact-buttons:hover .contact-button i {
    transform: translateX(0);
  }
  
  .contact-button.whatsapp { background-color: #25D366; }
  .contact-button.phone { background-color: #007bff; }
  .contact-button.email { background-color: #6c757d; }
  .contact-button.whatsapp:hover { background-color: #128C7E; }
  .contact-button.phone:hover { background-color: #0056b3; }
  .contact-button.email:hover { background-color: #5a6268; }

  /* === MOBİL STİLLERİ (768px altı) === */
  @media (max-width: 767.98px) {
    .fixed-contact-buttons {
      /* Konumu sol ortadan alıp alta taşıyoruz */
      top: auto;
      bottom: 0;
      left: 0;
      right: 0; /* Genişliği %100 yap */
      transform: translateY(0); /* Dikey ortalamayı iptal et */

      /* Butonları yan yana diz */
      flex-direction: row; 
      gap: 0; /* Aradaki boşluğu kaldır */
    }

    .contact-button {
      /* Her butonun eşit yer kaplamasını sağla */
      flex: 1; 
      justify-content: center; /* İçeriği ortala */
      padding: 12px 5px;
      font-size: 11px; /* Yazıyı biraz küçült */
      
      /* Köşeleri sıfırla */
      border-radius: 0;
      
      /* Animasyonu ve gizlemeyi iptal et */
      transform: translateX(0);
      transition: background-color 0.2s; /* Sadece renk geçişi kalsın */
    }

    /* İkon ve yazıyı alt alta diz */
    .contact-button {
        flex-direction: column;
        gap: 4px;
    }

    .contact-button i {
      /* İkon pozisyonunu sıfırla */
      transform: translateX(0);
      margin: 0;
      font-size: 20px;
    }

    /* Hover etkileşimini mobil için devre dışı bırak */
    .fixed-contact-buttons:hover .contact-button {
      transform: translateX(0);
    }
  }
</style>