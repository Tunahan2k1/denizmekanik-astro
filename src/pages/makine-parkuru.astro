---
import Layout from '../layouts/Layout.astro';
import makineler from '../data/makineler.json';
---

<Layout title="Makine Parkuru | Modern Endüstriyel Çözümler | Deniz Mekanik">
  <Fragment slot="head">
    <meta name="description" content="Deniz Mekanik'in modern makine parkuru. Universal torna, CNC boru bükme, dişli açma tezgahları ve daha fazlası ile endüstriyel çözümler." />
    <meta name="keywords" content="makine parkuru, universal torna, CNC boru bükme, dişli açma, portal freze, radyal matkap, endüstriyel makineler" />
    <link rel="canonical" href="https://www.denizmekanik.com/makine-parkuru" />

    <!-- Open Graph -->
    <meta property="og:title" content="Deniz Mekanik - Makine Parkuru" />
    <meta property="og:description" content="Modern endüstriyel makinelerle yüksek kaliteli üretim çözümleri." />
    <meta property="og:url" content="https://www.denizmekanik.com/makine-parkuru" />
    <meta property="og:image" content="https://www.denizmekanik.com/assets/images/makineler/merdaneTornasi.webp" />

    <!-- Yapısal Veri (Schema.org) -->
    <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": "Deniz Mekanik Makine Parkuru",
      "description": "Endüstriyel üretim ve fason imalat için kullanılan yüksek kapasiteli makinelerin listesi.",
      "numberOfItems": {makineler.length},
      "itemListElement": {JSON.stringify(makineler.map((makine, index) => ({
        "@type": "ListItem",
        "position": index + 1,
        "name": makine.ad
      })))}
    }
    </script>
  </Fragment>

  <div class="container mt-5">
    <div class="text-center mb-5">
      <h1 class="display-4 font-weight-bold">Makine Parkuru</h1>
      <p class="lead">Modern Teknoloji ile Endüstriyel Çözümler</p>
    </div>
    
    <div class="row mb-5">
      <div class="col-12">
        <div class="jumbotron bg-light p-4 rounded">
          <h2 class="h3 font-weight-bold mb-3">Sektörün Lider Makine Parkuru</h2>
          <p class="mb-0">Deniz Mekanik olarak, sektörün ihtiyaç duyduğu en modern makinelerle hizmet vermekteyiz. Makine parkurumuz, yüksek hassasiyetli üretim kapasitesi ile endüstriye çözümler sunar.</p>
        </div>
      </div>
    </div>
    
    <div class="row">
      {makineler.map(makine => (
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <img src={makine.resim} class="card-img-top" alt={`${makine.ad} - Deniz Mekanik Makine Parkuru`} loading="lazy" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title font-weight-bold">{makine.ad}</h5>
              <p class="card-text text-muted small">{makine.aciklama}</p>
              <ul class="list-group list-group-flush mb-3 mt-auto">
                {makine.ozellikler.map(ozellik => (
                  <li class="list-group-item">{ozellik}</li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>